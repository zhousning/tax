%h1 Listing invoices

%p
  = link_to "导出XML", export_xml_invoices_path, :class => 'btn btn-primary'
%table
  %thead
    %tr
      %th Standard
      %th Unit
      %th Amount
      %th Tax unit price
      %th Tax total
      %th Cess
      %th Tax money
      %th
      %th
      %th

  %tbody
    - @invoices.each do |invoice|
      %tr
        %td= invoice.standard
        %td= invoice.unit
        %td= invoice.amount
        %td= invoice.tax_unit_price
        %td= invoice.tax_total
        %td= invoice.cess
        %td= invoice.tax_money
        %td= link_to 'Show', invoice
        %td= link_to 'Edit', edit_invoice_path(invoice)
        %td= link_to 'Destroy', invoice, :method => :delete, :data => { :confirm => 'Are you sure?' }

