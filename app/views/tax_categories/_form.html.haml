.container
  .row
    .col-md-6.col-md-offset-2
      = form_for @tax_category, :html => {:class => "form-horizontal"}  do |f|
        - if @tax_category.errors.any?
          #error_explanation
            %h2= "#{pluralize(@tax_category.errors.count, "error")} prohibited this tax_category from being saved:"
            %ul
              - @tax_category.errors.full_messages.each do |msg|
                %li= msg
        .form-group
          = f.label "商品名称", :class => "col-md-4 control-label"
          .col-md-8
            = f.text_field :name, :class => "form-control"
        .form-group
          = f.label "税收分类编码", :class => "col-md-4 control-label"
          .col-md-8
            = f.text_field :code, :class => "form-control"
        .form-group
          .col-md-3.col-md-offset-4
            = f.submit '保存', :class => "btn btn-success btn-lg btn-block"
          .col-md-3.col-md-offset-1
            = link_to '返回', tax_categories_path, :class => "btn btn-danger btn-lg btn-block"
